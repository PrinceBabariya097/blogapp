<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partial/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partial/nav') %>
    <div class="mt-3">
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="coverImage" class="form-label">Upload cover image</label>
          <input type="file" name="coverimage" class="form-control" id="coverImage" />
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            aria-describedby="title"
          />
        </div>
        <div>
          <label for="content">Add content : </label>
          <textarea
            class="form-control"
            id="content"
            style="height: 100px"
            name="content"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
      </form>
    </div>
    <%- include('./partial/scripts') %>
  </body>
</html>
