<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partial/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partial/nav') %>
    <div class="container mt-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col" style="width: 18rem; height: 18rem;">
            <img src="<%= blog.coverImageUrl %>"  class="card-img-top" style="height: 60%;"/>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partial/scripts') %>
  </body>
</html>
